<div class='text-center'>
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    {{#each comments as |comment|}}
      <div class='row mb-4 blog'>
        <div class='col-md-5'>
          <h2>
            {{comment.description}}
          </h2>
          <p>Created by
            {{comment.user.name}}
            on
            {{format_date comment.date_created}}</p>
        </div>
      </div>
    {{/each}}
  </p>
</div>