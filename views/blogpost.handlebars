<div class='text-center'>
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  {{#if logged_in}}
    {{#if comments.length}}
          <div class='comment-list'>
      {{#each comments as |comment|}}
        <div class='row mb-4 comment'>
          <div class='col-md-5'>
            <h2>
              {{comment.description}}
            </h2>
            <p>Created by
              {{comment.user.name}}
              on
              {{format_date comment.date_created}}</p>
          </div>
            {{#if (ifUser comment.user_id  ../logged_id)}}
            <div class='col-md-4'>
                <button
                class='btn btn-sm btn-danger'
                data-id='{{comment.id}}'
                >DELETE</button>
            </div>
            {{/if}}
        </div>
      {{/each}}
      </div>
      <div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Post a comment:</h3>

    <form class='form new-comment-form'>
      <div class='form-group'>
        <label for='comment-desc'>description:</label>
        <textarea class='form-input' id='comment-desc' name='comment-desc'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>
    {{/if}}
  {{else}}
    <p>
      {{#if comments.length}}
      <div class='comment-list'>
        {{#each comments as |comment|}}
          <div class='row mb-4 comment'>
            <div class='col-md-5'>
              <h2>
                {{comment.description}}
              </h2>
              <p>Created by
                {{comment.user.name}}
                on
                {{format_date comment.date_created}}</p>
            </div>
          </div>
        {{/each}}
        </div>
      {{/if}}
    </p>
  {{/if}}

</div>

<script src='/js/comment.js'></script>